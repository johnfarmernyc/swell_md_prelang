<%= simple_form_for(@patient) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :fname %>
    <%= f.input :phone %>
    <%= f.association :doctor %>
    <%= f.input :lname %>
    <%= f.input :email %>
    <%= f.input :dob %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
